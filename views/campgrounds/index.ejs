<% include ../partials/header %>

<% if(error != null && error.other != null) { %>
<div class="alert <%= error.other.style %>" role="alert">
  <%= error.other.content %>
</div>
<% } %>
<div class="container">
  <header class="jumbotron">
    <h1>Welcome To YelpCamp!</h1>
    <p>View our hand-picked camps from all over the world</p>
    <p>
      <a class="btn btn-primary btn-lg" href="/campgrounds/new"
        >Add New Campground</a
      >
    </p>
  </header>

  <div class="row text-center">
    <div class="col-lg-12">
      <h3>Our most popular campground</h3>
    </div>

    <% campgrounds.forEach(function(campground) { %>
    <div class="col-md-3 col-sm-6">
      <div class="card">
        <img class="card-img-top" src="<%= campground.image %>" />
        <h4 class="card-title"><%= campground.name %></h4>
        <div class="row justify-content-center mb-3">
          <div class="col-10 ">
            <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary"
              >Read more</a
            >
          </div>
        </div>
      </div>
    </div>
    <% }); %>
  </div>
</div>

<% include ../partials/footer %>
